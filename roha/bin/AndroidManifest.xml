        <activity
            android:name="com.roha.roha.MakeScreen"
            android:label="@string/title_activity_make_screen" >
        </activity>
        <activity
            android:name="com.roha.roha.PeopleScreen"
            android:label="@string/title_activity_people_screen" >
        </activity>
        <activity
            android:name="com.roha.roha.PhotoScreen"
            android:label="@string/title_activity_photo_screen" >
        </activity>
        <activity
            android:name="com.roha.roha.SettingScreen"
            android:label="@string/title_activity_setting_screen" >
