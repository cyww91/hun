<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vip.myname.JoinScreen"
    tools:ignore="MergeRootFrame" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:text="회원가입"
                android:textSize="50dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/text_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:text="ID"
                    android:textSize="22dip" />

                <EditText
                    android:id="@+id/editText_joinid"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="20dip" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:text="영문 또는 영문+숫자 조합 4자이상 11자 이하"
                android:textSize="13dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/text_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:text="비밀번호"
                    android:textSize="22dip" />

                <EditText
                    android:id="@+id/editText_joinpassword1"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textSize="20dip" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/text_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:text="비밀번호 확인"
                    android:textSize="22dip" />

                <EditText
                    android:id="@+id/editText_joinpassword2"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textSize="20dip" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:text="영문 또는 영문+숫자 조합 6자이상 20자 이하"
                android:textSize="13dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/text_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:text="이메일"
                    android:textSize="22dip" />

                <EditText
                    android:id="@+id/editText_joinemail"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="20dip" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/text_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:text="성별"
                    android:textSize="22dip" />

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="20dp">

                    <RadioButton
                        android:id="@+id/radio0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="남자"
                        android:textSize="22dip" />
                     
                    <RadioButton
	                    android:id="@+id/radio1"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:checked="true"
	                    android:text="여자"
	                    android:textSize="22dip" />

                </RadioGroup>
            </LinearLayout>
            
           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/text_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:text="통신사"
                    android:textSize="22dip" />

                <RadioGroup
                    android:id="@+id/radioGroup2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="15dp">

                    <RadioButton
                        android:id="@+id/radio0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KT"
                        android:textSize="22dip" />
                     
                    <RadioButton
	                    android:id="@+id/radio1"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:checked="true"
	                    android:text="SKT"
	                    android:textSize="22dip" />
                    
                     <RadioButton
	                    android:id="@+id/radio2"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:checked="true"
	                    android:text="LG U+"
	                    android:textSize="22dip" />

                </RadioGroup>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/text_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:text="폰번호"
                    android:textSize="22dip" />

                <EditText
                    android:id="@+id/editText_joinemail"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:inputType="number"
                    android:textSize="20dip" >

                    <requestFocus />
                </EditText>
            </LinearLayout>
        <Button
	         android:id="@+id/button2"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="입력완료"
	         android:textSize="30dip"
	         android:layout_marginTop="20dp"
	         android:layout_marginLeft="110dp" />
            
        </LinearLayout>
    </ScrollView>

</FrameLayout>